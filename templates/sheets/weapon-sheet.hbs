<form class="item-sheet" autocomplete="off">
    <header class="sheet-header flexrow">
        <h1 class="charname">
            <input name="name" type="text" value="{{item.name}}" placeholder="Weapon Name" />
        </h1>
    </header>

    <div class="sheet-content">
        <div class="form-group">
            <label>Flat Damage</label>
            <input type="number" name="system.flatdamage" value="{{system.flatdamage}}" />
        </div>

        <div class="form-group">
            <label>Damage Dice</label>
            <input type="number" name="system.damagedice" value="{{system.damagedice}}" />
        </div>

        <div class="form-group">
            <label>Size</label>
            <input type="number" name="system.size" value="{{system.size}}" />
        </div>

        <fieldset class="traits">
            <legend>Weapon Traits</legend>
            <div class="form-group">
                <label>Cost</label>
                <input type="number" name="system.cost" value="{{system.cost}}" />
            </div>
            <div class="form-group">
                <label>Tariff</label>
                <input type="number" name="system.tariff" value="{{system.tariff}}" />
            </div>
            <div class="form-group">
                <label>Restriction</label>
                <input type="number" name="system.restriction" value="{{system.restriction}}" />
            </div>
        </fieldset>

        <div class="form-group roll-button">
            <label>Roll Damage</label>
            <button type="button" class="roll-damage" title="Roll Damage">
                <i class="fas fa-dice-d6"></i> Roll
            </button>
        </div>
    </div>
</form>
