<form class="item-sheet" autocomplete="off">
    <header class="sheet-header flexrow">
        <h1 class="charname">
            <input name="name" type="text" value="{{item.name}}" placeholder="Weapon Name" />
        </h1>
    </header>
    <div class="item-img">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    </div>

    <div class="sheet-content">

        <!-- Damage Line -->
        <div class="form-group damage-line flexrow">
            <label>Damage:</label>
            <input type="number" name="system.flatdamage" value="{{system.flatdamage}}" class="tiny-input" />
            <span> + </span>
            <input type="number" name="system.damagedice" value="{{system.damagedice}}" class="tiny-input" />
            <img src="icons/svg/d20-black.svg" class="roll-damage roll-icon" title="Roll Damage" />
        </div>


<div class="form-group">
  <label for="system.attackwith">Damage Bonus</label>
  <select name="system.attackwith">
    <option value="">â€”</option>
    <option value="brawn" {{#if (eq system.attackwith "brawn")}}selected{{/if}}>Brawn</option>
    <option value="intelligence" {{#if (eq system.attackwith "intelligence")}}selected{{/if}}>Intelligence</option>
    <option value="awareness" {{#if (eq system.attackwith "awareness")}}selected{{/if}}>Awareness</option>
    <option value="personality" {{#if (eq system.attackwith "personality")}}selected{{/if}}>Personality</option>
  </select>
</div>

        <!-- Economics Collapsible -->
        <div class="economics-section">
            <h4 class="section-header toggle-econ">Economics <i class="fas fa-caret-down"></i></h4>
            <div class="econ-content" style="display: none;">
                <div class="form-group econ-inputs">
                    <label>Cost</label>
                    <input type="number" name="system.cost" value="{{system.cost}}" class="square-input" />
                </div>
                <div class="form-group econ-inputs">
                    <label>Tariff</label>
                    <input type="number" name="system.tariff" value="{{system.tariff}}" class="square-input" />
                </div>
                <div class="form-group econ-inputs">
                    <label>Restriction</label>
                    <input type="number" name="system.restriction" value="{{system.restriction}}" class="square-input" />
                </div>
                <div class="form-group">
                    <button type="button" class="purchase-button">Purchase</button>
                </div>
            </div>
        </div>

        <!-- Description Section -->
        <div class="form-group description-block">
            <div class="description-block">
                {{editor enrichedDescription target="system.description" button=true editable=true}}
            </div>


        </div>




    </div>
</form>
